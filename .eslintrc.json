{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "import/extensions": [
          ".js"
        ]
    },
    "rules": {
        "import/extensions": [2, {"js": "ignorePackages"}],
        "import/no-unresolved": [
            "error",
            {
              "ignore": ["^firebase-admin/.+"]
            }
          ]
    }
}
